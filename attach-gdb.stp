global wrapper_path = "";

probe begin {
    print ("Ready to attach...\n");
}

probe procfs("wrapper_path").read {
    $value = wrapper_path;
}

probe procfs("wrapper_path").write {
    wrapper_path = $value;
}

probe kprocess.exec {
    if ( filename == wrapper_path ) {
        cmd = sprintf ("gdb -ex 'catch exec' -ex 'shell kill -USR1 %d' -ex 'continue' -ex 'continue' -p %d", pid(), pid());
        system (cmd);
    }
}
